<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DEBITS app</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/default.css" />
    <script defer src="/js/application.js"></script>
  </head>

  <body class="bg-light">
    {{#if username}}
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container-fluid">
            <a class="navbar-brand" href="/">DEBITS</a>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <a class="nav-link" href="/signout">Выйти</a>
                <a class="nav-link disabled">Welcome back, {{username}}!</a>
              </div>
            </div>
          </div>
        </nav>
      </header>

    {{else}}
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container-fluid">
            <a class="navbar-brand" href="/">DEBITS</a>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <a
                  href="#"
                  class="nav-link"
                  data-bs-toggle="modal"
                  data-bs-target="#signupModal"
                  class="slide-in-left-1 btn btn-outline-primary"
                >Sign Up</a>
                <a
                  class="nav-link"
                  href="#"
                  data-bs-toggle="modal"
                  data-bs-target="#signinModal"
                >Sign In</a>
              </div>
            </div>
          </div>
        </nav>
      </header>

      <section id="welcome_block" class="my-5">
        <div class="row px-3 py-2 bg-light bg-gradient">
          <div
            class="col-md-8 col-lg-7 d-flex justify-content-start align-self-center flex-column pl-2"
          >
            <p class="fs-3 text-focus-in">
              DEBITS Terminal
            </p>
            <p class="fs-4 text-focus-in-1">
              Get all the financial data you need!
            </p>
            <p class="slide-in-left-2">Developed by <a href="https://k-sterio.com/" target="_blank">Kirill Bondarenko</a> </p>
            <div class="d-flex">
              <button
                type="button"
                data-bs-toggle="modal"
                data-bs-target="#signupModal"
                class="slide-in-left-2 btn btn-primary m-1"
              >Sign Up</button>
              <button
                type="button"
                data-bs-toggle="modal"
                data-bs-target="#signinModal"
                class="slide-in-left-1 btn btn-outline-primary m-1"
              >Sign In</button>
            </div>
          </div>
          <div
            class="col-md-4 col-lg-5 d-flex align-items-center lite-description d-none d-md-block"
          >
            <img
              src="./imgs/instance.jpg"
              class="img-fluid border"
              alt="Terminal"
            />
          </div>
        </div>
      </section>

      <!-- Modal Sign Up-->
      <div
        class="modal fade"
        id="signupModal"
        tabindex="-1"
        aria-labelledby="signupModalLable"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="signupModalLable">Sign Up</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <container class="forms">
                <div class="m-1" id="sign_up">
                  <form action="/signup" method="POST">
                    <h2 class="fw-normal fs-3">Let's get started!</h2>
                    <label for="email">Email:</label><br />
                    <input
                      type="email"
                      id="email"
                      name="email"
                      placeholder="Email"
                      required
                    /><br />
                    <label for="name">Name:</label><br />
                    <input
                      type="text"
                      id="name"
                      name="name"
                      placeholder="John"
                      required
                    /><br />
                    <label for="password">Password:</label><br />
                    <input
                      type="password"
                      id="password"
                      name="password"
                      required
                    /><br /><br />
                    <input
                      class="btn btn-outline-primary"
                      type="submit"
                      value="Submit"
                    />
                  </form>
                </div>
              </container>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal Sign In-->
      <div
        class="modal fade"
        id="signinModal"
        tabindex="-1"
        aria-labelledby="signinModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="signinModalLabel">Sign In</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <container class="forms">
                <div class="m-1" id="sign_in">
                  <form action="/signin" method="POST">
                    <h2 class="fw-normal fs-3">Welcome back!</h2>
                    <label for="email">Email:</label><br />
                    <input
                      type="email"
                      id="email"
                      name="email"
                      placeholder="Email"
                      required
                    /><br />
                    <label for="password">Password:</label><br />
                    <input
                      type="password"
                      id="password"
                      name="password"
                      required
                    /><br /><br />
                    <input
                      class="btn btn-outline-primary"
                      type="submit"
                      value="Submit"
                    />
                  </form>
                </div>
              </container>
            </div>
          </div>
        </div>
      </div>
    {{/if}}

    {{{body}}}
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
